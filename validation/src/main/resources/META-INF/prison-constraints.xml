<?xml version="1.0" encoding="UTF-8"?>
<constraint-mappings
    xmlns="http://jboss.org/xml/ns/javax/validation/mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jboss.org/xml/ns/javax/validation/mapping validation-mapping-1.1.xsd"
    version="1.1">
    <!--
    You cannot configure the same bean twice
    <bean class="com.gecko.json.domain.Prisoner" ignore-annotations="true">
        <field name="number">
         constraintsaint annotation="javax.validation.constraints.Null">
                <message>Prisoner number should be nullable</message>
          constraintsaint>
        </field>
    </bean>
    -->

    <bean class="com.gecko.json.domain.PrisonCell" ignore-annotations="true">
        <field name="id">
            <constraint annotation="javax.validation.constraints.Null">
                <message>Prison cell id should be null</message>
            </constraint>
        </field>
    </bean>

</constraint-mappings>